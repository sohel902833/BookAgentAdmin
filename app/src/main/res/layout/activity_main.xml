<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<include
    layout="@layout/app_ber_layout"
    android:id="@+id/mainAppBarid"/>
    <androidx.cardview.widget.CardView
        android:layout_below="@id/mainAppBarid"
        android:id="@+id/balanceCard"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardElevation="15dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        app:cardCornerRadius="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        >
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/adminBalanceTextViewiid"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="18sp"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_below="@+id/balanceCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:id="@+id/ln0"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/addBalanceCArd"
                    android:layout_weight="1"
                    app:cardCornerRadius="25dp"

                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    app:cardElevation="15dp"
                    android:layout_margin="10dp"
                    >
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:text="Add \n Balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/balanceHistoryCard"
                    app:cardCornerRadius="25dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    app:cardElevation="15dp"
                    android:layout_margin="10dp"
                    >
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:text="Add\n Balance \nStatement"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                 android:layout_below="@+id/ln0"
                android:layout_marginBottom="10dp"
                android:id="@+id/ln1"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/sendBalanceCard"
                    android:layout_weight="1"
                    app:cardCornerRadius="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    app:cardElevation="15dp"
                    android:layout_margin="10dp"
                    >
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:textAlignment="center"
                            android:text="Send \n Balance\n To Agent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="25dp"
                    android:id="@+id/sendbalanceHistoryCard"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    app:cardElevation="15dp"
                    android:layout_margin="10dp"
                    >
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:textAlignment="center"
                            android:text="Send\n Balance \n Statement"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ln2"
                android:layout_below="@+id/ln1"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="25dp"
                    android:id="@+id/agentsCard"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    app:cardElevation="15dp"
                    android:layout_margin="10dp"
                    >
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:textAlignment="center"
                            android:text="All\nAgent\nList"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/booksCard"
                    app:cardCornerRadius="25dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    app:cardElevation="15dp"
                    android:layout_margin="10dp"
                    >
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView

                            android:textStyle="bold"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:textAlignment="center"
                            android:text="Add\nUpdate\nBooks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ln3"
                android:layout_below="@+id/ln2"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:id="@+id/tokenCard"
                    app:cardCornerRadius="25dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    app:cardElevation="15dp"
                    android:layout_margin="10dp"
                    >
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:textAlignment="center"
                            android:text="Token\nHistory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/totalSellCard"
                    app:cardCornerRadius="25dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    app:cardElevation="15dp"
                    android:layout_margin="10dp"
                    >
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:textAlignment="center"
                            android:text="Total\nSell"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_below="@+id/ln3"
                android:id="@+id/logoutCard"
                app:cardCornerRadius="25dp"
                android:layout_width="180dp"
                android:layout_centerHorizontal="true"
                android:layout_height="120dp"
                app:cardElevation="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                >
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView

                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        android:text="Logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>